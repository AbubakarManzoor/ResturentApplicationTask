<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:paddingLeft="15dp"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <CheckBox
                    android:id="@+id/cb_menu_confirm_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_menu_item_name"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="@color/home_grid_black"
                    android:textSize="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tv_menu_item_price"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rs.50"
                    android:gravity="center"
                    android:textColor="@color/home_grid_black"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_menu_quantity_decrease"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_menu_item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="@color/home_grid_black"
                        android:text="0"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="25sp"/>

                    <Button
                        android:id="@+id/btn_menu_quantity_increase"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/sharma"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>